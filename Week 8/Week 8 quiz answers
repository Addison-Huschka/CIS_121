from random import randint
value = randint(0,1)
def toss_coin(guess=2):
    if guess ==2:
        guess = 0
    if guess == value:
        return "Correct!"
    else: 
        return "Incorrect!"
    
#2
from random import randint
value = randint(0,9)
def guess(type="even"):
    if value % 2 == 0:
        if type.lower() == "even":
            return "Correct!"
        else:
            return "Incorrect!"
    elif value % 2 == 1:
        if type.lower() == "odd":
            return "Correct!"
        else:
            return "Incorrect!"
        
#3
def count_duplicates(num_1=0,num_2=0,num_3=0):
    if num_1 == num_2 and num_1 == num_3 and num_3 == num_2:
        return "There are 3 duplicates"
    elif num_1 != num_2 and num_1 != num_3 and num_2 != num_3:
        return "There are no duplicates"
    else:
        return "There are 2 duplicates"

