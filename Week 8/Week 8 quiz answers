#15
def is_negative(number):
    return number < 0
def is_odd(num):
    return num % 2 == 1
def report_negative_odds(values):
    lyst = []
    for numbers in values:
        if is_negative(numbers) == True and is_odd(numbers) == True:
            lyst.append(numbers)
    return lyst
print(report_negative_odds([100,-57,12,1,-36,-15]))
