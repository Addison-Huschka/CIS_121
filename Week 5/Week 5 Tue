word = "Hello World!"

count = 0
for letter in word:
    count += 1
print(count)

for x in range(0,len(word)):
    print(x)

count = 0
word = str(input("Enter a word: "))
for letter in word[0:len(word)]:
    if letter == "a" or letter == "e" or letter == "i" or letter == "o" or letter == "u" or letter == "A" or letter == "E" or letter == "I" or letter == "O" or letter == "U":
        count += 1
    else: 
        continue
print(count)

def count_vowels(word):
    count = 0
    for letter in word:
        if letter == "a" or letter == "e" or letter == "i" or letter == "o" or letter == "u" or letter == "A" or letter == "E" or letter == "I" or letter == "O" or letter == "U":
            count += 1
        else: 
            continue
    print(f'The amount of vowels in {word} is {count}')
    return count
word1 = "Hello world"
word2 = "apples and bananas"
word3 = "happy times"
count_vowels(word1)
count_vowels(word2)
count_vowels(word3)
vowel1 = count_vowels(word1)
vowel2 = count_vowels(word2)
vowel3 = count_vowels(word3)
total_vowel = vowel1 + vowel2 + vowel3
print(f'the total vowels seen so far is {total_vowel}')