#1
smaller_base = float(input("What is the length of the smaller base? "))
longer_base = float(input("What is the length of the larger base? "))
height = float(input("What is the height of the trapezoid? "))
area = ((smaller_base + longer_base)/2)*height
print(f'The area of the trapizoid is {area}.')

#2
import math
height = float(input("What is the height of the cylinder? "))
radius = float(input("What is the radius of the cylinder? "))
volume = math.pi*(radius**2)*height
print(f'The volume of the cylinder is {volume}')

#3
import math
radius = float(input("Enter the radius: "))
volume = (4/3)*math.pi*(radius**3)
print(f'The volume of the sphere is {volume}')

#4
import math
radius = float(input("Enter the radius: "))
area = (1/2)*math.pi*(radius**2)
print(f'The area of the semi-circle is {area}')

#5
base = float(input("Enter the base: "))
height = float(input("Enter the height: "))
volume = ((base**2)*height)/3
print(f'The volume for the pyramid is {volume}')

#6
import math
radius = float(input("What is the radius? "))
height = float(input("What is the height? "))
volume = math.pi*(((radius**2)*height)/3)
print(f'The volume of the cone is {volume}')

#7
three_point_shots1 = int(input("How many 3-pointers were there for team 1? "))
three_point_shots2 = int(input("How many 3-pointers were there for team 2? "))
two_point_shots1 = int(input("How many 2-pointers were there for team 1? "))
two_point_shots2 = int(input("How many 2-pointers were there for team 2? "))
team1_score = (three_point_shots1*3)+(two_point_shots1*2)
team2_score = (three_point_shots2*3)+(two_point_shots2*2)
print(f'Team 1 scored {team1_score} points and team 2 scored {team2_score} points.')

#8
chickens = int(input("How many chickens do you have? "))
cows = int(input("How many cows do you have? "))
pigs = int(input("How many pigs do you have? "))
animal_legs = (chickens*2)+(cows*4)+(pigs*4)
print(f'The total amount of legs on your farm is {animal_legs}')