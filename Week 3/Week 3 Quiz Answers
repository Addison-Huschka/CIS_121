#17. 
player1 = input("Player 1 choice: ")
player2 = input("Player 2 choice: ")
if player1 == "rock":
    if player2 == "scissors":
        print("Player 1 wins!")
    elif player2 == "paper":
        print("Player 2 wins!")
    else:
        print("it's a tie")
elif player1 == "scissors":
    if player2 == "rock":
        print("Player 2 wins!")
    elif player2 == "paper":
        print("Player 1 wins!")
    else:
        print("it's a tie")
elif player1 == "paper":
    if player2 == "scissors":
        print("Player 2 wins!")
    elif player2 == "rock":
        print("Player 1 wins!")
    else:
        print("it's a tie")

#18. 
side1 = float(input("Pick side length 1: "))
side2 = float(input("Pick side length 2: "))
side3 = float(input("Pick side length 3: "))
if side1 == side2 and side1 == side3 and side2 == side3:
    print("Equilateral triangle")
elif side1 != side2 and side1 != side3 and side2 != side3:
    print("Scalene triangle")
else:
    print("Isosceles triangle")

